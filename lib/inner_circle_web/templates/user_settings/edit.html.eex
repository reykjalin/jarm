<h1>Settings</h1>

<h3>Change display name</h3>

<%= form_for @display_name_changeset, Routes.user_settings_path(@conn, :update), fn f -> %>
  <%= if @display_name_changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= hidden_input f, :action, name: "action", value: "update_password" %>

  <%= label f, :display_name, "New display name" %>
  <%= text_input f, :display_name, required: true %>
  <%= error_tag f, :display_name %>

  <%= label f, :current_password, for: "current_password_for_display_name" %>
  <%= password_input f, :current_password, required: true, name: "current_password", id: "current_password_for_display_name" %>
  <%= error_tag f, :current_password %>

  <div>
    <%= submit "Change display name" %>
  </div>
<% end %>

